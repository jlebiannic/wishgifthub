meta {
  name: 2. Admin crée un groupe
  type: http
  seq: 2
}

post {
  url: {{base_url}}/api/groups
  body: json
  auth: bearer
}

auth:bearer {
  token: {{security_admin_token}}
}

body:json {
  {
    "name": "Groupe Test Sécurité",
    "type": "noël"
  }
}

script:post-response {
  if (res.status === 200 && res.body.id) {
    bru.setEnvVar("security_group_id", res.body.id);
    if (res.body.jwtToken) {
      bru.setEnvVar("security_admin_token", res.body.jwtToken);
    }
    console.log("✅ SÉCURITÉ - Étape 2: Groupe créé par admin");
  }
}

tests {
  test("Groupe créé - Status 200", function() {
    expect(res.getStatus()).to.equal(200);
  });
}

