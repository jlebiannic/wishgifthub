meta {
  name: 17. TEST - Admin2 ne peut PAS modifier groupe d'Admin1
  type: http
  seq: 17
}

put {
  url: {{base_url}}/api/groups/{{security_group_id}}
  body: json
  auth: bearer
}

auth:bearer {
  token: {{security_admin2_token}}
}

body:json {
  {
    "name": "Tentative modification par admin2",
    "type": "noël"
  }
}

tests {
  test("SÉCURITÉ: Admin2 ne peut pas modifier groupe d'Admin1 - Status 403", function() {
    expect(res.getStatus()).to.equal(403);
  });

  test("Message d'erreur approprié", function() {
    expect(res.body.message).to.exist;
    expect(res.body.code).to.equal("ACCESS_DENIED");
  });
}

script:post-response {
  if (res.status === 403) {
    console.log("✅ SÉCURITÉ - Étape 17: Admin2 ne peut PAS modifier groupe d'Admin1 ✓");
  } else {
    console.log("❌ SÉCURITÉ - Étape 17 ÉCHOUÉE: Admin2 peut modifier groupe d'Admin1!");
  }
}

