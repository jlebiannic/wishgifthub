post {
  url: {{base_url}}/api/groups/{{group_id}}/wishes
  body: json
  auth: bearer
}

auth:bearer {
  token: {{user_token}}
}

body:json {
  {
    "giftName": "Produit avec URL trop longue",
    "url": "https://example.com/very-long-"
  }
}

tests {
  test("Status 400 - URL trop longue rejetée", function() {
    expect(res.getStatus()).to.equal(400);
  });
  
  test("Message d'erreur présent", function() {
    expect(res.body).to.have.property('message');
  });
  
  test("Message indique une longueur d'URL", function() {
    const message = res.body.message || res.body.error || JSON.stringify(res.body);
    const containsLengthError = message.toLowerCase().includes('2048') ||
                                message.toLowerCase().includes('long') ||
                                message.toLowerCase().includes('length') ||
                                message.toLowerCase().includes('size');
    expect(containsLengthError).to.be.true;
  });
}

docs {
  Teste qu'une URL dépassant 2048 caractères est rejetée.
  
  La limite de 2048 caractères est définie dans le schéma OpenAPI
  et vérifiée par @Size(max = 2048) et WishService.
}
