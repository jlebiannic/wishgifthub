meta {
  name: Invalid - URL JavaScript (XSS)
  type: http
  seq: 8
}

post {
  url: {{base_url}}/api/groups/{{group_id}}/wishes
  body: json
  auth: bearer
}

auth:bearer {
  token: {{user_token}}
}

body:json {
  {
    "giftName": "Produit avec URL XSS",
    "url": "javascript:alert('XSS')"
  }
}

tests {
  test("Status 400 - URL JavaScript rejetée", function() {
    expect(res.getStatus()).to.equal(400);
  });
  
  test("Message d'erreur présent", function() {
    expect(res.body).to.have.property('message');
  });
  
  test("Message indique une validation d'URL", function() {
    const message = res.body.message || res.body.error || JSON.stringify(res.body);
    const containsUrlError = message.toLowerCase().includes('url') ||
                             message.toLowerCase().includes('valide') ||
                             message.toLowerCase().includes('valid') ||
                             message.toLowerCase().includes('http');
    expect(containsUrlError).to.be.true;
  });
}

docs {
  Teste qu'une URL avec protocole JavaScript est rejetée par @ValidUrl.
  
  Cette URL pourrait être utilisée pour des attaques XSS.
  L'URL "javascript:alert('XSS')" doit être rejetée pour des raisons de sécurité.
}
