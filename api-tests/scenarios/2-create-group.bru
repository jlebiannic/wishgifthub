meta {
  name: 2. Créer un groupe
  type: http
  seq: 2
}

post {
  url: {{base_url}}/api/groups
  body: json
  auth: bearer
}

auth:bearer {
  token: {{admin_token}}
}

body:json {
  {
    "name": "Noël en famille 2025",
    "type": "noël"
  }
}

script:post-response {
  if (res.status === 200 && res.body.id) {
    bru.setEnvVar("group_id", res.body.id);
    console.log("✅ ÉTAPE 2: Création groupe réussie - ID: " + res.body.id);
  } else {
    console.log("❌ ÉTAPE 2 ÉCHOUÉE: Création groupe");
  }
  if (res.body.jwtToken) {
    bru.setEnvVar("admin_token", res.body.jwtToken);
    console.log("✅ JWT admin mis à jour avec le nouveau groupe");
  }
}

tests {
  test("Étape 2: Création groupe - Status 200", function() {
    expect(res.getStatus()).to.equal(200);
  });

  test("Étape 2: Groupe créé avec ID", function() {
    expect(res.body.id).to.be.a('string');
  });

  test("Étape 2: Nom du groupe correct", function() {
    expect(res.body.name).to.equal("Noël en famille 2025");
  });

  test("Étape 2: Type du groupe correct", function() {
    expect(res.body.type).to.equal("noël");
  });

  test("Étape 2: JWT token retourné", function() {
    expect(res.body.jwtToken).to.be.a('string');
  });
}

