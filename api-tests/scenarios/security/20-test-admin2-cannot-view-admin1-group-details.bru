meta {
  name: 20. TEST - Admin2 ne peut PAS voir les détails du groupe d'Admin1
  type: http
  seq: 20
}

get {
  url: {{base_url}}/api/groups/{{security_group_id}}/users
  body: none
  auth: bearer
}

auth:bearer {
  token: {{security_admin2_token}}
}

script:post-response {
  if (res.status === 403) {
    console.log("✅ SÉCURITÉ - Étape 20: Admin2 ne peut PAS voir les membres du groupe d'Admin1 ✓");
  } else {
    console.log("❌ SÉCURITÉ - Étape 20 ÉCHOUÉE: Admin2 peut voir les membres du groupe d'Admin1!");
  }
}

tests {
  test("SÉCURITÉ: Admin2 ne peut pas voir les membres du groupe d'Admin1 - Status 403", function() {
    expect(res.getStatus()).to.equal(403);
  });
  
  test("Message d'erreur approprié", function() {
    expect(res.body.message).to.exist;
    expect(res.body.code).contains("ACCESS_DENIED");
  });
}
