meta {
  name: 10. TEST - User ne peut PAS réserver son propre souhait
  type: http
  seq: 10
}

post {
  url: {{base_url}}/api/groups/{{security_group_id}}/wishes/{{security_user_wish_id}}/reserve
  body: none
  auth: bearer
}

auth:bearer {
  token: {{security_user_token}}
}

tests {
  test("SÉCURITÉ: User ne peut pas réserver son propre souhait - Status 400", function() {
    expect(res.getStatus()).to.equal(400);
  });

  test("Message d'erreur approprié", function() {
    expect(res.body.message).to.include("propre souhait");
    expect(res.body.code).to.equal("BUSINESS_RULE_VIOLATION");
  });
}

script:post-response {
  if (res.status === 400) {
    console.log("✅ SÉCURITÉ - Étape 10: User ne peut PAS réserver son propre souhait ✓");
  } else {
    console.log("❌ SÉCURITÉ - Étape 10 ÉCHOUÉE: User peut réserver son propre souhait!");
  }
}

