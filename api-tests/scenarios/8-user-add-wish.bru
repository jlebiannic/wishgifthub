meta {
  name: 8. User ajoute un souhait
  type: http
  seq: 8
}

post {
  url: {{base_url}}/api/groups/{{group_id}}/wishes
  body: json
  auth: bearer
}

auth:bearer {
  token: {{user_token}}
}

body:json {
  {
    "giftName": "Console PlayStation 5",
    "description": "Edition standard, avec deux manettes",
    "url": "https://www.exemple.com/ps5"
  }
}

script:post-response {
  if (res.status === 200 && res.body.id) {
    bru.setEnvVar("wish_id", res.body.id);
    console.log("✅ ÉTAPE 8: Souhait créé - ID: " + res.body.id);
  } else {
    console.log("❌ ÉTAPE 8 ÉCHOUÉE: Création souhait");
  }
}

tests {
  test("Étape 8: Création souhait - Status 200", function() {
    expect(res.getStatus()).to.equal(200);
  });

  test("Étape 8: Souhait créé avec ID", function() {
    expect(res.body.id).to.be.a('string');
  });

  test("Étape 8: Nom du cadeau correct", function() {
    expect(res.body.giftName).to.equal("Console PlayStation 5");
  });

  test("Étape 8: Description correcte", function() {
    expect(res.body.description).to.equal("Edition standard, avec deux manettes");
  });

  test("Étape 8: URL correcte", function() {
    expect(res.body.url).to.equal("https://www.exemple.com/ps5");
  });

  test("Étape 8: Souhait non réservé", function() {
    expect(res.body.reservedBy).to.be.null;
  });
}

