meta {
  name: 9. User liste ses propres souhaits
  type: http
  seq: 9
}

get {
  url: {{base_url}}/api/groups/{{group_id}}/wishes/me
  body: none
  auth: bearer
}

auth:bearer {
  token: {{user_token}}
}

tests {
  test("Étape 9: Liste mes souhaits - Status 200", function() {
    expect(res.getStatus()).to.equal(200);
  });

  test("Étape 9: Au moins un souhait retourné", function() {
    expect(res.body).to.be.an('array');
    expect(res.body.length).to.be.greaterThan(0);
  });

  test("Étape 9: Le souhait créé est dans la liste", function() {
    const wishId = bru.getEnvVar("wish_id");
    const foundWish = res.body.find(w => w.id === wishId);
    expect(foundWish).to.not.be.undefined;
    expect(foundWish.giftName).to.equal("Console PlayStation 5");
  });
}

script:post-response {
  if (res.status === 200) {
    console.log("✅ ÉTAPE 9: User liste ses souhaits - " + res.body.length + " souhait(s)");
  } else {
    console.log("❌ ÉTAPE 9 ÉCHOUÉE: Liste mes souhaits");
  }
}

