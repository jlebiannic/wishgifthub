meta {
  name: 21. Admin2 crée son propre groupe
  type: http
  seq: 21
}

post {
  url: {{base_url}}/api/groups
  body: json
  auth: bearer
}

auth:bearer {
  token: {{security_admin2_token}}
}

body:json {
  {
    "name": "Groupe Admin2",
    "type": "noël"
  }
}

script:post-response {
  if (res.status === 200 && res.body.id) {
    bru.setEnvVar("security_admin2_group_id", res.body.id);
    if (res.body.jwtToken) {
      bru.setEnvVar("security_admin2_token", res.body.jwtToken);
    }
    console.log("✅ SÉCURITÉ - Étape 21: Admin2 crée son propre groupe");
  }
}

tests {
  test("Admin2 crée son groupe - Status 200", function() {
    expect(res.getStatus()).to.equal(200);
  });
}

