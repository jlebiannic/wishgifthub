meta {
  name: Create Invitation
  type: http
  seq: 1
}

post {
  url: {{base_url}}/api/groups/{{group_id}}/invite
  body: json
  auth: bearer
}

auth:bearer {
  token: {{admin_token}}
}

body:json {
  {
    "email": "user@example.com"
  }
}

tests {
  test("Status 200 ou 201", function() {
    const status = res.getStatus();
    expect(status === 200 || status === 201).to.be.true;
  });

  test("Has invitation link", function() {
    expect(res.body.invitationLink).to.be.a('string');
  });

  test("Has token", function() {
    expect(res.body.token).to.be.a('string');
  });

  test("Has email", function() {
    expect(res.body.email).to.equal("user@example.com");
  });
}

script:post-response {
  if (res.body.token) {
    bru.setEnvVar("invitation_token", res.body.token);
  }
}

docs {
  Crée une invitation pour un utilisateur.
  Le lien d'invitation sera de la forme: https://app.com/join/{token}

  Le token est automatiquement sauvegardé dans la variable d'environnement 'invitation_token'.
}

