meta {
  name: Create Group
  type: http
  seq: 1
}

post {
  url: {{base_url}}/api/groups
  body: json
  auth: bearer
}

auth:bearer {
  token: {{admin_token}}
}

body:json {
  {
    "name": "Noël 2025",
    "type": "noël"
  }
}

tests {
  test("Status 200 ou 201", function() {
    const status = res.getStatus();
    expect(status === 200 || status === 201).to.be.true;
  });

  test("Has group id", function() {
    expect(res.body.id).to.be.a('string');
  });

  test("Has group name", function() {
    expect(res.body.name).to.equal("Noël 2025");
  });

  test("Has group type", function() {
    expect(res.body.type).to.equal("noël");
  });
}

script:post-response {
  if (res.body.id) {
    bru.setEnvVar("group_id", res.body.id);
  }
}

